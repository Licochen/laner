extends layout

block content
  div.navbar.navbar-fixed-top
    div.navbar-inner
      div.container
        a.btn.btn-navbar(data-target=".nav-collapse",data-toggle="collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href="/") #{title}
        div.nav-collapse
          ul.nav
            - config.site_headers.menu.forEach(function(menu){
              li
                a(href='!{menu.url}') !{menu.name}
            - })
        form.navbar-form.pull-left
          input.search-query.span3(type="text",placeholder="Search")
        div.nav-collapse
          ul.nav.pull-right
            - config.site_headers.right_menu.menu_item.forEach(function(menu){
              li
                a(href='!{menu.url}') !{menu.name}
            - })
